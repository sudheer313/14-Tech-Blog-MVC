
<div class='row mt-4'>
  <div class='col-md-6'>
    <h3>Comment:</h3>

    <form class='form new-project-form'>
      <div class='form-group'>
        <label for='project-name'>Title:</label>
        <input
          class='form-input'
          type='text'
          id='project-name'
          name='project-name'
          value="{{title}}"
      </div>

      <div class='form-group'>
        <label for='project-desc'>Content:</label>
        <textarea
          class='form-input'
          id='project-desc'
          name='project-desc'
          
        > 
        {{content}}
        </textarea>
      </div>
      <div class='form-group'>
        <button type='submit' data-id='{{id}}' class='btn btn-primary comment-button'>Comment</button>
        <button  class='btn btn-primary cancel-button'>Cancel</button>
      </div>
    </form>
  </div>

</div>
<script src='./js/comment.js'></script>